@using Microsoft.AspNet.Identity;
@using SportClubSite.Models;
@using SportClubSite.Controllers;
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_NAVStart.cshtml";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<!DOCTYPE html>
<html lang="en">

<head>

    <!--<title> Spor Club </title>-->
    <title>@ViewBag.Title</title>

   
</head>

<body id="page-top">


    <!-- Header -->
    <header class="masthead" style=" background-image:url('image/Hamza.jpg') ;
              background-color:antiquewhite; height:700px">
        <div class="container">
            <div class="intro-text">




                @{
                    string currentUser = HttpContext.Current.User.Identity.GetUserId();
                    if (currentUser == null)
                    {
                        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger hidden-lg" href=@Url.Action("Login", "Account")>Login</a>
                    }

                    else
                    {
                        AccountController a = new AccountController();



                        if (a.aa() == 1)
                        {
                            <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger hidden-lg" href=@Url.Action( "IndexStartAfterLogin", "Home")>Manag Your Reservation</a>

                        }


                        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger hidden-lg" href=@Url.Action( "IndexView", "Home")>View</a>

                    }   }

            </div>


        </div>


    </header>







    <!-- Services -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Services</h2>
                    <h3 class="section-subheading text-muted">Services Provided By The Club</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-futbol-o" style="font-size:36px"></i>
                    </span>
                    <h3 class="section-subheading text-muted"> Football</h3>
                    <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="@Url.Action("Index", "Home")">Browse it</a>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-globe" style="font-size:36px"></i>
                    </span>
                    <h3 class="section-subheading text-muted">Online News</h3>
                    <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="@Url.Action("Index", "OnlineNews")">Browse it</a>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class=" fa fa-video-camera" style="font-size:36px"></i>
                    </span>
                    <h3 class="section-subheading text-muted">Online Match</h3>
                    <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="@Url.Action("OnlinMatch", "Home")">Browse it</a>
                    <!--<p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>-->
                </div>
            </div>
        </div>
    </section>

    <!-- About -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">About</h2>
                    <h3 class="section-subheading text-muted">We Are a Great Club</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        <li>
                            <div class="timeline-image">
                                <img class="rounded-circle img-fluid" src="img/about/1.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>2019-2020</h4>
                                    <h4 class="subheading">Our Campiones</h4>
                                </div>
