@model SportClubSite.Models.Cycle1

@{
    ViewBag.Title = "AddNotice";
    Layout = "~/Views/Shared/_ViewPage.cshtml";
}

<h2>AddNotice</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cycle1</h4>
        <hr />
        @Html.ValidationSummary(true)

       
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.cause, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.cause)
                @Html.ValidationMessageFor(model => model.cause)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="AddNotice" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
