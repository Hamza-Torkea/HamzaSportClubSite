@model SportClubSite.Models.Player
    @{
        ViewBag.Title = "Add";
        Layout = "~/Views/Shared/_NAVAftar.cshtml";
    }
    <style>
        h4 {
            float: left;
            display: inline-block;
            background-color: #00771e;
            color: #fff;
            font-size: 1.5em;
            padding: 10px 20px;
            text-decoration: none;
        }


      
    </style>
<link rel="stylesheet" type="text/css" href="~/Usertemp/css/roboto-font.css">
<link rel="stylesheet" type="text/css" href="~/Usertemp/fonts/line-awesome/css/line-awesome.min.css">
<!-- Jquery -->
<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
<!-- Main Style Css -->
<link rel="stylesheet" href="~/Usertemp/css/style.css" />

<hr/>
<hr/>
<hr/>

<body >
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    <div class="page-content">
        <div class="form-v2-content">
            <div class="form-left">

                <img src="~/image/dfs1.jpg" alt="form" width="450" height="200">

                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <h2 style="padding:20px">Addition Form</h2>
                    
                    <div class="form-control-file">

                        <br />
                        <hr />

                        @Html.ValidationSummary(true)

                        <div class="form-group" >
                            @Html.LabelFor(model => model.Player_id, new { @class = "control-label col-md-2" })
                        <br />
                           
                                <div class="col-md-10" >
                                @Html.EditorFor(model => model.Player_id)
                                @Html.ValidationMessageFor(model => model.Player_id)
                            </div>
                        </div>
                        <br />
                       
                        <div class="form-group">
                            @Html.LabelFor(model => model.Team_id, new { @class = "control-label col-md-2" })
                            <br />
                           

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Team_id)
                                @Html.ValidationMessageFor(model => model.Team_id)
                            </div>
                        </div>
                        
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.PlayerName, new { @class = "control-label col-md-2" })
                            <br />
                           
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PlayerName)
                                @Html.ValidationMessageFor(model => model.PlayerName)
                            </div>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.TeamName, new { @class = "control-label col-md-2" })
                           <br />
                        
                             <div class="col-md-10">
                                @Html.EditorFor(model => model.TeamName)
                                @Html.ValidationMessageFor(model => model.TeamName)
                            </div>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Long, new { @class = "control-label col-md-2" })
                            <br />
                        
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Long)
                                @Html.ValidationMessageFor(model => model.Long)
                            </div>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Wieght, new { @class = "control-label col-md-2" })
                            <br />
                        
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Wieght)
                                @Html.ValidationMessageFor(model => model.Wieght)
                            </div>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
                            <br />
                        
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Price)
                                @Html.ValidationMessageFor(model => model.Price)
                            </div>
                        </div>
                        <br />
                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
                }

                
            </div>

            </div>
        
</body>