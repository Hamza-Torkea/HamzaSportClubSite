@model SportClubSite.Models.Employee
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <meta charset="utf-8">

    <link rel="stylesheet" type="text/css" href="~/Usertemp/css/roboto-font.css">
    <link rel="stylesheet" type="text/css" href="~/Usertemp/fonts/line-awesome/css/line-awesome.min.css">
    <!-- Jquery -->
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/Usertemp/css/style.css" />

</head>

<body class="images-cropper-pro" style="background-image: url(/image/a15.jpg)">


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="page-content">
        <div class="form-v2-content">

            <div class="form-left">

                <img src="~/image/h1.jpg" alt="form" width="600" height="600">


            </div>




            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="padding:40px">
                    <h4>Employee</h4>
                    <hr />
                    <br />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Employee_id)
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmployeeName, new { @class = "control-label col-md-2" })
                        <br />
                        <br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EmployeeName)
                            @Html.ValidationMessageFor(model => model.EmployeeName)
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                        <br />
                        <br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Adress, new { @class = "control-label col-md-2" })
                        <br />
                        <br />
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Adress)
                            @Html.ValidationMessageFor(model => model.Adress)
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-danger" />
                        </div>
                        <br />
                    </div>
                </div>
            
            <div style="padding:50px">
                @Html.ActionLink("Back to List", "Index")
            </div>

            }

            </div>
        </div>
          </body>